{
  "name": "d2r-sprite-editor-2025",
  "displayName": "D2R Sprite Editor",
  "description": "View and edit Diablo 2 Resurrected sprite files with pixel-perfect accuracy and ExampleJS algorithm compatibility",
  "version": "1.1.0",
  "publisher": "bethington",
  "icon": "docs/images/icon.png",
  "engines": {
    "vscode": "^1.48.0"
  },
  "categories": [
    "Other",
    "Visualization"
  ],
  "keywords": [
    "diablo",
    "d2r",
    "sprite",
    "image",
    "viewer",
    "paintnet"
  ],
  "activationEvents": [
    "onCustomEditor:d2rmodding.spriteViewer",
    "onStartupFinished"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/bethington/vscode-sprite-editor-extension"
  },
  "main": "./out/extension.js",
  "contributes": {
    "customEditors": [
      {
        "viewType": "d2rmodding.spriteViewer",
        "displayName": "D2R Sprite Viewer",
        "selector": [
          {
            "filenamePattern": "*.sprite"
          }
        ],
        "priority": "default"
      }
    ],
    "commands": [
      {
        "command": "d2rmodding.openSprite",
        "title": "Open as D2R Sprite",
        "category": "D2R Sprite"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "when": "resourceExtname == .sprite",
          "command": "d2rmodding.openSprite",
          "group": "navigation"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "test": "node ./out/test/runTest.js",
    "lint": "eslint src --ext ts",
    "package": "npx @vscode/vsce package",
    "publish": "npx @vscode/vsce publish"
  },
  "devDependencies": {
    "@types/glob": "^7.2.0",
    "@types/mocha": "^9.1.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.48.0",
    "@typescript-eslint/eslint-plugin": "^5.35.1",
    "@typescript-eslint/parser": "^5.35.1",
    "@vscode/test-electron": "^2.1.5",
    "eslint": "^8.23.1",
    "glob": "^8.0.3",
    "mocha": "^10.0.0",
    "typescript": "^4.9.4",
    "vsce": "^1.103.1"
  },
  "dependencies": {
    "canvas": "^3.1.2"
  },
  "capabilities": {
    "untrustedWorkspaces": {
      "supported": true
    }
  }
}